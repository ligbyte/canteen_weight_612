<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    tools:context=".home.ui.activity.MainActivity">

    <View
        android:id="@+id/scan_holder_view"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!-- 左侧整体布局 -->
    <LinearLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 顶部logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@mipmap/icon_canteen_label" />

        <!-- 侧边栏 -->
        <com.stkj.cashier.home.ui.widget.HomeTabLayout
            android:id="@+id/htl_left_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_19"
            android:background="@color/white" />
    </LinearLayout>

    <!-- 内容区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_11" />



    <!--登录占位布局-->
    <FrameLayout
        android:id="@+id/fl_login_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 全局占位 -->
    <View
        android:id="@+id/root_view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 欢迎界面 -->
    <FrameLayout
        android:id="@+id/fl_screen_welcom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_background"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/home_bg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="小炒黄牛肉"
                    android:textColor="@color/white"
                    android:textSize="66sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_price_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="35sp"
                        android:src="@mipmap/ic_unit_price" />

                    <TextView
                        android:id="@+id/tv_price_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_toRightOf="@+id/tv_price_flag"
                        android:text="99.00"
                        android:textColor="@color/white"
                        android:textSize="66sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_price"
                        android:includeFontPadding="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="/1000g"
                        android:textColor="@color/white"
                        android:textSize="33sp"
                        android:textStyle="bold" />


                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>


    <!-- 绑定成功界面 -->
    <FrameLayout
        android:id="@+id/fl_screen_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_background_success"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_130"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:text="小炒黄牛肉"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="￥99.00/1000g"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_weight="2"
                android:paddingRight="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:background="@null">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="本次重量："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_40"
                            android:text="50g"
                            android:textColor="#F6963D"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="本次金额："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_40"
                            android:text="¥12.50"
                            android:textColor="#F6963D"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@null"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="当前订单总价："
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_40"
                            android:text="¥20.50"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_55"
            android:drawableLeft="@mipmap/ic_user"
            android:drawablePadding="@dimen/dp_5"
            android:text="王小明 · 账户余额：￥120.50"
            android:textColor="#70DDFF"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- 主布局布局占位(可以将弹窗做到这里不用dialogFragment,节省内存) -->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.stkj.cashier.home.ui.widget.BindingHomeTitleLayout
        android:id="@+id/htl_consumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:htl_consume_lay_res="1"
        app:isLightMode="true" />
</FrameLayout>