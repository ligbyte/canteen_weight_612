<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@null">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_bind_back"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="后台管理"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- 顶部tab切换 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4" />


    <LinearLayout
        android:id="@+id/ll_app_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/rl_server_addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:text="服务器地址"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_server_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/arrow_right_addr"
                android:text="192.168.1.1:9003"
                android:textColor="#80FFFFFF"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/arrow_right_addr"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:src="@mipmap/arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:text="当前版本"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="1.0.1"
                android:textColor="#80FFFFFF"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_restart_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:text="重启应用"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:src="@mipmap/arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_app_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/rl_face_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                    android:text="人脸识别阈值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#1AFFFFFF" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_face_sync"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null">

                <TextView
                    android:id="@+id/tv_face_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="本机人脸数据"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_face_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_face_summary"
                    android:includeFontPadding="false"
                    android:text="0人已更新"
                android:textColor="#80FFFFFF"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/arrow_right_face"
                    android:includeFontPadding="false"
                    android:text="全量更新人脸"
                    android:textColor="#80FFFFFF"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/arrow_right_face"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:src="@mipmap/arrow" />

                <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1AFFFFFF" />

        </RelativeLayout>


        </LinearLayout>

</RelativeLayout>


    <!-- 占位页面 -->
    <FrameLayout
        android:id="@+id/fl_setting_second_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:visibility="visible" />


</FrameLayout>